<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaInicialUsuario">

   <ImageView
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:background="@drawable/ic_baseline_account_circle_24"
       android:layout_gravity="center"
       android:layout_marginTop="40dp"
       />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="a"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="    a"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/bordas_button"
        android:layout_gravity="center"
        android:backgroundTint="#C4C4C4"
        android:text="Editar Perfil"
        android:layout_marginBottom="20dp"
        />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:drawableLeft="@drawable/ic_baseline_sentiment_satisfied_alt_24"
       android:layout_gravity="center"
       android:text="    aaaa"
       android:textSize="20sp"
       android:layout_marginBottom="20dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
        android:layout_gravity="center"
        android:text="    aaaa"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_add_circle_24"
        android:layout_gravity="center"
        android:text="    aaaa"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_call_made_24"
        android:layout_gravity="center"
        android:text="    aaaa"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>

</LinearLayout>